      <% if (!currentUser) { %>
        <a href="/user/login" class="get-started-btn scrollto">Login</a>
        <a href="/user/register" class="get-started-btn scrollto">Get Started</a>
      <% } else { %>
        <ul class="navbar-nav ml-auto">
          <% if (currentUser.role === 'client') { %>
            <li class="nav-item"><a href="/user/dashboard" class="nav-link">Profile</a></li>
            <li class="nav-item"><a href="/user/logout" class="nav-link text-danger">Logout</a></li>
          <% } else if (currentUser.role === 'consultant') { %>
            <li class="nav-item"><a href="/user/dashboard" class="nav-link">Profile</a></li>
            <li class="nav-item"><a href="/user/logout" class="nav-link text-danger">Logout</a></li>
          <% } %>
        </ul>
      <% } %>
    </div>
